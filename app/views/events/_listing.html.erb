<div class="row">
  <% @events.each_with_index do |event, index| %>
    <div class="small-12 medium-6 end columns text-center">
      <div class="event">
        <%= link_to (image_tag event.thumbnail.url(:normal)), show_event_path(event.slug) %>
        <div class="info">
          <h3><%= link_to event.title, show_event_path(event.slug) %></h3>
        </div>
        <%= HTML_Truncator.truncate(event.description, 30).html_safe %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= paginate @events %>
  </div>
</div>
