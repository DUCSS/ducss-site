<div class="modal">
  <%= form_for @message, url: send_message_path(@message) do |f| %>

    <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@message.errors.count, "error") %> prevented your email from being sent:</h2>

        <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <input type="text" name="text" style="display: none;">

    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Name" %>

    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Email" %>

    <%= f.label :body %>
    <%= f.text_area :body, rows: 5, cols: 40, class: "textarea", placeholder: "Write your message here..." %>

    <%= f.submit "Send" %>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  <% end %>
</div>
