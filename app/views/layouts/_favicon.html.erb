<%= favicon_link_tag 'favicon.ico' %>
<% %w(57 60 72 76 114 120 144 152).each do |size| %>
  <%= favicon_link_tag "apple-touch-icon-#{size}x#{size}.png", rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: "#{size}x#{size}" %>
<% end %>

<% %w(16 32 96 128 196).each do |size| %>
  <%= favicon_link_tag "favicon-#{size}x#{size}.png", rel: 'icon', type: 'image/png', sizes: "#{size}x#{size}" %>
<% end %>
